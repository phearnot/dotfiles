[pretty]
    ol = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[alias]
    st = status --short --branch --untracked-files
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --graph --pretty=ol --date=relative
    who = shortlog -s --
    h = help
    fix = commit --amend --no-edit
    med = commit --amend --only
    whatis = show -s --pretty=ol --date=relative
    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
    ff = merge --ff-only @{upstream}
    m = merge --no-ff
    rh = reset --hard
    index = diff --staged

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[push]
    default = upstream

[rerere]
    enabled = 1
[user]
    name = Sergey Nazarov
    email = phearnot@renee.ru
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path = 
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
